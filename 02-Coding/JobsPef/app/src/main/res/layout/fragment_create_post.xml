<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp">

            <EditText
                android:id="@+id/edtTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_black"
                android:hint="@string/hint_title"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingLeft="7dp" />

            <Spinner
                android:id="@+id/spCategory"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                ></Spinner>

            <EditText
                android:id="@+id/edtContent"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_black"
                android:gravity="top"
                android:hint="@string/hint_say_right"
                android:inputType="textMultiLine"
                android:maxEms="5"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:paddingTop="4dp" />

            <EditText
                android:id="@+id/edtRequei"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_black"
                android:gravity="top"
                android:hint="@string/requiment"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:paddingTop="4dp" />

            <EditText
                android:id="@+id/edtBenifed"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_black"
                android:gravity="top"
                android:hint="@string/benifeed"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:paddingTop="4dp" />

            <EditText
                android:id="@+id/edtTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_black"
                android:hint="@string/time_limited"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:paddingTop="4dp" />

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_black"
                android:hint="@string/address"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:paddingTop="4dp" />

            <EditText
                android:id="@+id/edtContact"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_black"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:paddingTop="4dp" />


            <ImageView
                android:id="@+id/imgContent"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/landscape" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@color/side_menu_bg"
                    android:text="@string/reset"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btnPost"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/side_menu_bg"
                    android:text="@string/post"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
